<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fithou.friendeverywhere">

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA4PQ-gUYD-ha7QjBXcsbhnHfRTFoEWq5Y" />

        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AppIntroActivity"
            android:theme="@style/AppIntroTheme" />
        <activity
            android:name=".activity.ConfirmPinCodeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/updateInfo"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.FriendProfileActivity"
            android:label="@string/title_friend_profile" />
        <activity
            android:name=".activity.AcceptFriendActivity"
            android:label="@string/title_accept_friend"
            android:theme="@style/CustomActionBarTheme"></activity>
        <activity android:name=".activity.MessageActivity"></activity>
        <activity
            android:name=".activity.NewMessageActivity"
            android:label="@string/title_new_message"></activity>
        <activity
            android:name=".activity.CountryListActivity"
            android:label="@string/title_country_list"
            android:theme="@style/CustomActionBarTheme" />
        <activity
            android:name=".activity.AboutUsActivity"
            android:label="@string/aboutUs" />
        <activity
            android:name=".activity.TermsOfUse"
            android:label="@string/termsOfUse" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FeedBackActivity"
            android:label="@string/feedback"
            android:theme="@style/CustomActionBarTheme" />
        <activity
            android:name=".activity.FindFriendActivity"
            android:label="@string/title_activity_find_friend"
            android:theme="@style/CustomActionBarTheme"></activity>
    </application>

</manifest>

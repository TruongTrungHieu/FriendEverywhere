<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="4"
    android:background="@color/colorPrimary"
    >
    <ImageButton
        android:id="@+id/imgbtn_contact_call"
        android:src="@drawable/ic_phone_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <ImageButton
        android:id="@+id/imgbtn_contact_sms"
        android:src="@drawable/ic_sms_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"/>
    <ImageButton
        android:id="@+id/imgbtn_contact_chat"
        android:src="@drawable/ic_chat_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <ImageButton
        android:id="@+id/imgbtn_contact_info"
        android:src="@drawable/ic_info_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</LinearLayout>
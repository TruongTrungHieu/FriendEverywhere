<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_avatarSetting"
            android:src="@drawable/ava"
            android:scaleType="fitCenter"
            app:riv_corner_radius="10dip"
            app:riv_border_width="1px"
            app:riv_border_color="@color/colorPrimary"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_SettingFullname"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textColor="@color/footer_actived"
                android:layout_marginBottom="20dp"
                />
            <Button
                android:layout_width="match_parent"
                android:textAllCaps="false"
                android:layout_gravity="bottom"
                android:layout_height="30dp"
                android:id="@+id/btn_UpdateInfo"
                android:layout_marginRight="20dp"
                android:textColor="@color/grey50"
                android:background="@color/colorPrimary"
                android:text="@string/updateInfo"
                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:background="@color/transparent"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accSettings"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_accountSettings"
        android:drawableLeft="@drawable/settings"
        android:drawablePadding="10dp"
        android:visibility="gone"
        />
    <Button
        android:background="@color/transparent"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutUs"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/btn_aboutUs"
        android:drawableLeft="@drawable/aboutus"
        android:drawablePadding="10dp"
        />
    <Button
        android:background="@color/transparent"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/termsOfUse"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/btn_terms"
        android:drawableLeft="@drawable/terms"
        android:drawablePadding="10dp"
        />
    <Button
        android:background="@color/transparent"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feedback"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/btn_feedback"
        android:drawableLeft="@drawable/feedback"
        android:drawablePadding="10dp"
        />
    <Button
        android:background="@color/transparent"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logOut"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:id="@+id/btn_Logout"
        android:drawableLeft="@drawable/logout48"
        android:drawablePadding="10dp"
        />
</LinearLayout>
</ScrollView>
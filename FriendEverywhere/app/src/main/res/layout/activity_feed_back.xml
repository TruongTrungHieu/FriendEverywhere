<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fithou.friendeverywhere.activity.FeedBackActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_back_subject"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="@color/footer_actived"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/et_feedback_subject"
        android:textColor="@color/colorDefault"
        android:text="@string/feed_back_subject"
        android:textStyle="italic"
        android:selectAllOnFocus="true"
        android:focusable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_back_content"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="@color/footer_actived"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/et_feedback_content"
        android:gravity="top"
        android:textColor="@color/colorDefault"
        android:text="@string/feed_back_content"
        android:textStyle="italic"
        android:selectAllOnFocus="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gá»­i"
        android:layout_gravity="center"
        android:id="@+id/btn_send_feedback"
        android:layout_marginTop="10dp"/>

</LinearLayout>

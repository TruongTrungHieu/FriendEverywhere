<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fithou.friendeverywhere.activity.CreatePasswordActivity">

    <TextView
        android:id="@+id/tv_fullname_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÊN HIỂN THỊ"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_fullname_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fullname_cp"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_pass_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_fullname_cp"
        android:layout_marginTop="20dp"
        android:text="MẬT KHẨU"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_pass_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pass_cp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_create_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_pass_cp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_create_pass"
        android:text="@string/create_pass_btn"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.fithou.friendeverywhere.activity.ProfileActivity"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ava"
            android:layout_gravity="center"
            android:id="@+id/iv_profileactivity"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/et_profileTen"
            android:text="Hùng Vũ"
            android:textAllCaps="true"
            android:enabled="false"
            android:textColor="@color/footer_actived"
            android:background="@color/transparent"
            android:textSize="20sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_profileGioithieu"
                android:text="Giới thiệu"
                android:gravity="center|left"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:enabled="false"
                android:textColor="@color/footer_actived"
                android:background="@color/transparent"
                android:text="Mình là Hùng, mình độc thân, hân hạnh được làm quen"
                android:id="@+id/et_profileGioithieu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_profileNgaysinh"
                android:inputType="date"
                android:ems="10"
                android:text="Ngày sinh"
                android:gravity="center|left"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_profileNgaysinh"
                android:text="13/04/1993"
                android:textColor="@color/footer_actived"
                android:enabled="false"
                android:background="@color/transparent"
                android:inputType="text"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_profileSdt"
                android:inputType="number"
                android:text="Số điện thoại"
                android:gravity="center|left"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_profileSdt"
                android:enabled="false"
                android:textColor="@color/footer_actived"
                android:background="@color/transparent"
                android:text="0123 813 7279"
                android:textSize="15dp"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_profileEmail"
                android:inputType="textEmailAddress"
                android:text="Email"
                android:gravity="center|left"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vuhuyhung1304@gmail.com"
                android:textSize="15dp"
                android:textColor="@color/footer_actived"
                android:enabled="false"
                android:background="@color/transparent"
                android:id="@+id/et_profileEmail"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:id="@+id/btn_profileLuu" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:id="@+id/btn_profileSua" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
